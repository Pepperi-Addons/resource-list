{
    "compileOnSave": false,
    "compilerOptions": {
        "paths": { "@angular/*": [ "../node_modules/@angular/*" ] },
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "ES2020",
        "allowJs": true,
        "moduleResolution": "node",
        "importHelpers": false,
        "target": "ES2015",
        "types": [],
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ]
    },
    "files": [
        "src/main.ts",
        "src/polyfills.ts",
        "src/app/data-configuration-block-editor/index.ts", //figure out why 
        "src/app/data-configuration-block/index.ts",
    ],
    "include": [
        "src/**/*.d.ts"
    ]
}
